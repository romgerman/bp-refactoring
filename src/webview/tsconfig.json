{
  "compilerOptions": {
    "rootDir": "../",
    "module": "ES6",
    "target": "ES2022",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "sourceMap": true,
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "types": ["vscode-webview"],
    "paths": {
      "@/webview": ["."],
      "@/webview/*": ["./*"],
      "@/shared": ["../shared"],
      "@/shared/*": ["../shared/*"],
    },
  },
  "exclude": ["node_modules"]
}
